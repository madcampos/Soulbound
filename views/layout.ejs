<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<title><%=title%></title>
		
		<link rel="shortcut icon" href="favicon.ico" />
		<link rel="apple-touch-icon" href="ios.png" />
		
		<meta name="description" content="Soulbound Project" />
		<meta name="author" content="madcampos" />

		<!-- CSS loadings -->
		<link rel="stylesheet/less" href="/stylesheets/default.less">
		<%-'<link rel="stylesheet/less" href="/stylesheets/' + css + '.less">'%>
		
		<!-- JS loadings -->
		<script src="/javascripts/less.js" type="text/javascript"></script>
		<% if (js) {
			for (var script in js){ %>
				<%-'<script src="/javascripts/' + js[script] + '.js" type="text/javascript"></script>'%>
			<% }
		} %>
	</head>
	<body>

		<!-- Modal Pannel -->

		<div id="modalWrapper" style="display:none;">
			<div id="modalPanel" >
				<input type="button" id="closePanel" onclick="document.getElementById('modalWrapper').style.display = 'none'" value="X">
				<h2></h2>
				<p></p>
				<pre><code></code></pre>
			</div>
		</div>

		<!-- navigation and tools -->
		<% if (isLoged) { %>
			<div id="mobileNav"></div>
			<nav>
				<ul>
					<li><a href="/character/list"><%=__('Characters')%></a></li>
					<li><a href="/history/list"><%=__('Histories')%></a></li>
					<li><a href="/map/list"><%=__('Maps')%></a></li>
					<li><a href="/npc/list"><%=__('NPCs')%></a></li>
					<li><a href="/turntracker"><%=__('Turn Tracker')%></a></li>
				</ul>
				<div>
					<%-'<a title="' + __('Configurations') + '" onclick="document.getElementById(\'configList\').style.display == \'none\' ? document.getElementById(\'configList\').style.display = \'block\' : document.getElementById(\'configList\').style.display = \'none\'"><img src="/images/cogs.svg"></a>'%>
					<ul id="configList" style="display:none;">
						<li><a href="/appconfig"><%=__('App')%></a></li>
						<li><a href="/data"><%=__('Data')%></a></li>
					</ul>
				</div>
			</nav>
		<% } %>
		
		<div id="container">
			<!-- Header -->
			
			<header>
				<h1><a href="/"><img src="/images/soulbound.svg" alt="Soulbound"><%=__('Soulbound Project')%></a></h1>
			</header>
			<div id="bodyWrapper">
				<%- body %>
			</div>
		</div>
		
		<footer>
			<img src="/images/cc/cc.svg" alt="Creative Commons"/>
			<img src="/images/cc/by.svg" alt="Attribution"/>
			<img src="/images/cc/nc.svg" alt="No Comercial" />
			<img src="/images/cc/sa.svg" alt="Share Alike" />
		</footer>
	</body>
</html>