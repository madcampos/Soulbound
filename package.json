{
  "name": "soulbound",
  "version": "1.0.0",
  "description": "RPG platform",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "node tests/api.v1.js",
    "clean": "mongo --eval \"db.dropDatabase()\" soulbound",
    "lint": "eslint --fix *.js",
    "build": "npm run lint && npm run docs",
    "prewatch": "npm run prestart",
    "watch": "nodemon -I",
    "prestart": "start /b mongod -f ./config/db.yaml && start /b redis-server ./config/redis.conf && echo DB servers started in background.",
    "start": "node index.js",
    "stop": "mongo --quiet --eval \"db.shutdownServer()\" admin && redis-cli shutdown && echo DB servers shutdown."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madcampos/Soulbound.git"
  },
  "keywords": [
    "rpg",
    "management"
  ],
  "author": "madcampos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/madcampos/Soulbound/issues"
  },
  "homepage": "https://github.com/madcampos/Soulbound#readme",
  "devDependencies": {
    "cross-env": "^1.0.7",
    "eslint": "^2.1.0",
    "nodemon": "^1.9.1",
    "supertest": "^1.2.0",
    "tree-exec": "^1.0.0",
    "tst": "^1.3.1"
  },
  "dependencies": {
    "config": "^1.19.0",
    "express": "^4.13.4",
    "express-subdomain": "^1.0.5",
    "helmet": "^1.3.0",
    "ioredis": "^1.15.1",
    "mongoose": "^4.4.3",
    "morgan": "^1.7.0",
    "passport": "^0.3.2"
  }
}
